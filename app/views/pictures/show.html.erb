<p id="notice"><%= notice %></p>
<div class="child row">
  <div class="wrapper col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    <div class="picture-text">
      <div class="userBox">
        <div class="left">
          <p class="img"><%= profile_img(@picture.user) %></p> <p><%= @picture.user.name %></p>
        </div>
      </div>
      <p class="left"><%= picture_img(@picture) %>
      <p class="left"><%= @picture.content %></p>
      <p class="right">
        <%= @picture.picture_time %>
      </p>
      <% if current_user.id == @picture.user_id %>
      <p class="right">
        <%= link_to "編集", edit_picture_path(@picture.id), class: 'btn btn-default btn-sm btn-info' %>
        <%= link_to "削除", picture_path(@picture.id), method: :delete, data: { confirm: '本当に削除していいですか？'}, class: 'btn btn-default btn-sm btn btn-info' %>
      </p>
      <% end %>
    </div>

    <div id="comments_area">
      <%= render partial: 'comments/index', locals: { comments: @comments, picture: @picture } %>
    </div>
    <%= render partial: 'comments/form', locals: { comment: @comment, picture: @picture } %>

    <%= link_to '戻る', pictures_path %>
  </div>
</div>
