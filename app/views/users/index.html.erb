<div class="container">
  <h2>ユーザー</h2>
  <% @users.each do |user| %>
      <div class="container-child col-md-2 col-sm-4 col-xs-6 ">
        <% if user.id != current_user.id %>
            <div class="item">
              <p class="img"><%= profile_img(user) %></br></p>
              <%= link_to user_path(user) do %><strong><%= user.name %></strong><% end %></br>
              <%= link_to  conversations_path(sender_id: current_user.id, recipient_id: user.id), method: 'post' do %>
                  <i class="fa fa-envelope-o fa-fw fa-2x"></i>
              <% end %>
              <%= render partial: 'follow_form', locals: { user: user } if signed_in?   %>
            </div>
        <% end %>
      </div>
  <% end %>
</div>
